<odoo>

  <!-- Register report -->
  <report id="mdl_report"
    model="certificate_planer.document"
    string="MDL v2 Report"
    name="certificate_planer.mdl_report_view"
    file="certificate_planer.mdl_report"
    report_type="qweb-pdf"
    print_report_name="'%s' % (object.name)"
    paperformat="paperformat_certificate_planer"/>

  <!-- Custom layout definition -->
  <template id="mdl_layout">
    <t t-if="not o" t-set="o" t-value="doc"/>
    <t t-if="not company">
      <!-- Multicompany -->
      <t t-if="company_id">
        <t t-set="company" t-value="company_id"/>
      </t>
      <t t-elif="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id.sudo()"/>
      </t>
      <t t-else="else">
        <t t-set="company" t-value="res_company"/>
      </t>
    </t>
    <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
      <t t-raw="0"/>
    </div>
  </template>

  <!-- MDL report definition -->
  <template id="mdl_report_view">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="doc">
      
        <!-- Header definition -->
        <div class="header">
          <div class="row">
            <div class="col-4">
              <span>Engineering</span>
              <h4 t-esc="doc.type_id.designation"/>
            </div>
            <div class="col-4 text-center">
              <br />
              <h4 t-esc="doc.name"/>
            </div>
            <div class="col-4 text-right">
              <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" style="max-height: 40px; max-width: 300px" alt="Logo"/>
            </div>
          </div>
          <hr/>
        </div>

        <!-- Page definition -->
        <t t-call="certificate_planer.mdl_layout">
          <div class="page">

            <h1 t-esc="doc.type_id.designation"/>
            <p>Print Date: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
            </p>
            <br />
            <br />
            <table class="table">
              <tbody>
                <tr>
                  <td>Document No:</td>
                  <td>
                    <h2 t-field="doc.name"/>
                  </td>
                  <td>Revision:</td>
                  <td>
                    <h2 t-field="current_revision.state_id"/>
                  </td>
                </tr>
                <tr>
                  <td>Subject:</td>
                  <td>
                    <h2 t-field="doc.certificate_id.part_id.designation"/>
                  </td>
                  <td></td>
                  <td></td>
                </tr>
                <tr>
                  <td>Certificate:</td>
                  <td>
                    <h2 t-field="doc.certificate_id.part_id.name"/>
                  </td>
                  <td></td>
                  <td></td>
                </tr>
                <tr>
                  <td>Aircraft Type:</td>
                  <td>
                    <h2 t-esc="doc.certificate_id.aircraft_type_id.name"/>
                  </td>
                  <td></td>
                  <td></td>
                </tr>
                <tr>
                  <td>Requirements:</td>
                  <td>
                    <h2 t-esc="doc.certificate_id.specification_id.name"/>
                  </td>
                  <td></td>
                  <td></td>
                </tr>
              </tbody>
            </table>
            <br />
            <style>
              div.signature {
                width: 400px;
                height: 120px;
                border: solid 1px black;
              }
              table.signature td {
                border-top: none; 
                vertical-align: bottom;
              }
            </style>
            <table class="table signature">
              <tbody>
                <tr>
                  <td style="padding-bottom: 1rem;">
                    <span class="o_bold">Prepared:</span>
                  </td>
                  <td>
                    <div class="signature" />
                  </td>
                </tr>
                <tr>
                  <td style="padding-bottom: 1rem;">
                    <span class="o_bold">Verified CVE:</span>
                  </td>
                  <td>
                    <div class="signature" />
                  </td>
                </tr>
              </tbody>
            </table>
            <p>Approved under the authority of the Design Organisation<br/>
            No: EASA.21J.359</p>
            <br />
            <p t-esc="title_page_text" />

            <p style="page-break-before:always;" />

            <h2>Record of Revision</h2>
            <table class="table-striped table-bordered table-sm" width="100%">
              <thead>
                <tr>
                  <th>Revision</th>
                  <th>Reason</th>
                  <th>Change</th>
                </tr>
              </thead>
              <tbody>
              <t t-foreach="revisions" t-as="revision">
                <tr>
                  <td style="padding: 0.2rem;">
                    <span t-field="revision.state_id"/>
                  </td>
                  <td style="padding: 0.2rem;">
                    <span t-field="revision.reason"/>
                  </td>
                  <td style="padding: 0.2rem;">
                    <span t-field="revision.change_id.change_id_id"/>
                  </td>
                </tr>
              </t>
              </tbody>
            </table>
            <p style="page-break-before:always;" />

            <h2>Log of Ammendments</h2>
            <t t-foreach="changes" t-as="change">
              <t t-set="is_legacy_change" t-value="change.status_id.is_legacy_change"/>
              
              <h3 t-field="change.change_id_id" />
              <table class="table table-bordered table-sm">
                <tbody>
                  <tr>
                    <td>
                      <strong t-field="change.classification_id.designation"/>
                    </td>
                    <td>
                      <strong>Authority Reference</strong>
                    </td>
                    <td>
                      <span t-field="change.authority_reference"/>
                    </td>
                    <td>
                      <strong>Aerolite Reference</strong>
                    </td>
                    <td>
                      <span t-field="change.reference"/>
                    </td>
                  </tr>
                </tbody>
              </table>
 
              <t t-foreach="change_revisions[change.id]" t-as="class_key">
                <t t-if="class_key_value['class']">
                  <t t-set="show_reason" t-value="class_key_value['class'].show_reason"/>
                  <t t-set="show_on_report" t-value="class_key_value['class'].show_on_report"/>
                </t>
                <t t-if="show_on_report and (class_key_value['items'] or not is_legacy_change)">
                  <table class="table-striped table-bordered table-sm" width="100%">
                    <thead>
                      <tr>
                        <th style="width: 300px;"><span t-esc="class_key"/></th>
                        <th style="width: 300px;">Title</th>
                        <t t-if="show_reason"><th style="width: 200px;" >Reason</th></t>
                        <th style="width: 100px;">Rev</th>
                      </tr>
                    </thead>
                    <tbody>
                    <t t-if="class_key_value['items']">
                      <t t-foreach="class_key_value['items']" t-as="revision">
                        <tr>
                          <td>
                            <span t-field="revision.document_id.name"/>
                          </td>
                          <td>
                            <span t-field="revision.document_id.title"/>
                          </td>
                          <t t-if="show_reason"><td>
                            <span t-field="revision.reason"/>
                          </td></t>
                          <td>
                            <span t-field="revision.state_id"/>
                          </td>
                        </tr>
                      </t>
                    </t>
                    <t t-else="">
                      <tr>
                        <td colspan="4">NONE</td>
                      </tr>
                    </t>
                    </tbody>
                  </table>
                  <br />
                </t>
              </t>

              <code t-if="request.session.debug">
              <strong>DEBUG</strong><br/>
              <t t-foreach="change_revisions[change.id]" t-as="class_key">
                class_key:<span t-esc="class_key"/><br/>
                is_legacy_change:<span t-esc="is_legacy_change"/><br/>
                <t t-if="class_key_value['class']">
                  <t t-set="show_reason" t-value="class_key_value['class'].show_reason"/>
                  <t t-set="show_on_report" t-value="class_key_value['class'].show_on_report"/>
                  show_reason:<span t-esc="show_reason"/><br/>
                  show_on_report:<span t-esc="show_on_report"/><br/>
                </t>
                <t t-foreach="class_key_value['items']" t-as="revision">
                  - name:<span t-field="revision.document_id.name"/><br/>
                  &#160;&#160;title:<span t-field="revision.document_id.title"/><br/>
                  &#160;&#160;reason:<span t-field="revision.reason"/><br/>
                  &#160;&#160;state:<span t-field="revision.state_id"/><br/>
                </t>
                <br />
              </t>
              </code>
              <br />

              <t t-if="change.part_ids or not is_legacy_change">
                <table class="table-striped table-bordered table-sm" width="100%">
                  <thead>
                    <tr>
                      <th>Partnumber</th>
                      <th>Designation</th>
                    </tr>
                  </thead>
                  <tbody>
                  <t t-if="change.part_ids">
                    <t t-foreach="change.part_ids" t-as="part">
                      <tr>
                        <td>
                          <span t-field="part.name"/>
                        </td>
                        <td>
                          <span t-field="part.designation"/>
                        </td>
                      </tr>
                    </t>
                  </t>
                  <t t-else="">
                      <tr>
                        <td colspan="2">NONE</td>
                      </tr>
                  </t>
                  </tbody>
                </table>
                <br />
              </t>
              
            </t>

            <p style="page-break-before:always;" />

          </div>
        </t>

        <!-- Footer definition -->
        <div class="footer">
          <hr/>
          <div class="row">
            <div class="col-2">
              <span>Revision: <span t-esc="current_revision.state_id.name" />
              </span>
            </div>
            <div class="col-8 text-center">
              <span t-esc="footer_text" />
            </div>
            <div class="col-2 text-right">
              <ul class="list-inline">
                <li class="list-inline-item">
                  <span class="page"/>
                </li>
                <li class="list-inline-item">/</li>
                <li class="list-inline-item">
                  <span class="topage"/>
                </li>
              </ul>
            </div>
          </div>
        </div>

      </t>
    </t>
  </template>

</odoo>
